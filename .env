# Fed_MPC_Web 环境变量配置示例
# 复制此文件为.env并填写实际值

# 基础配置
FLASK_ENV=production
SECRET_KEY=fed-mpc-demo-secret-key-2024-local-deployment
JWT_SECRET_KEY=fed-mpc-jwt-secret-key-2024-different-from-above

# 数据库配置
MYSQL_ROOT_PASSWORD=Fed_MPC_Root_2024!
MYSQL_HOST=mysql
MYSQL_PORT=3306
MYSQL_USER=fed_mpc_user
MYSQL_PASSWORD=Fed_MPC_User_2024!
MYSQL_DB=fed_mpc_web

# Redis配置
REDIS_URL=redis://redis:6379/0

# CORS配置
CORS_ORIGINS=https://your-domain.com,https://www.your-domain.com

# 邮件配置（可选）
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password

# 文件上传配置
UPLOAD_FOLDER=/app/uploads
MAX_CONTENT_LENGTH=104857600

# 监控配置（可选）
GRAFANA_PASSWORD=your-grafana-admin-password

# 日志配置
LOG_LEVEL=INFO
LOG_FILE=/app/logs/app.log

# SSL配置（如果需要HTTPS）
SSL_CERTIFICATE_PATH=/path/to/certificate.crt
SSL_PRIVATE_KEY_PATH=/path/to/private.key

# 第三方服务API密钥（根据需要添加）
# OPENAI_API_KEY=your-openai-api-key
# AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret-key

# 性能配置
GUNICORN_WORKERS=4
GUNICORN_TIMEOUT=30
GUNICORN_KEEPALIVE=2

# 安全配置
RATE_LIMIT_ENABLED=true
SESSION_TIMEOUT=3600

# 备份配置
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30